\newcommand{\fsframe}[1]{%
  {%
    \usebackgroundtemplate{%
      \vbox to \paperheight{%
        \vfil
        \hbox to \paperwidth{%
          \hfil
          #1
          \hfil
        }
        \vfil
      }
    }
    \begin{frame}[plain]\end{frame}
  }
}

\newcommand{\fshframe}[1]{\fsframe{\includegraphics[height=\paperheight]{#1}}}
\newcommand{\fswframe}[1]{\fsframe{\includegraphics[width=\paperwidth]{#1}}}

