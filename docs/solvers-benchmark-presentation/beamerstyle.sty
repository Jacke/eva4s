\newcommand{\fsframe}[2]{%
  {%
    \usebackgroundtemplate{%
      \vbox to \paperheight{%
        \vfil
        \hbox to \paperwidth{%
          \hfil
          #2
          \hfil
        }
        \vfil
      }
    }
    \begin{frame}[plain]
      \frametitle{#1}
    \end{frame}
  }
}

\newcommand{\fshframe}[2]{\fsframe{#1}{\includegraphics[height=\paperheight]{#2}}}
\newcommand{\fswframe}[2]{\fsframe{#1}{\includegraphics[width=\paperwidth]{#2}}}

